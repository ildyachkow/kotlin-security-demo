<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="01" author="admin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="public" tableName="usr"/>
            </not>
        </preConditions>
        <createTable schemaName="public" tableName="usr">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="usrPkey"/>
            </column>
            <column name="username" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert schemaName="public" tableName="usr">
            <column name="username" value="test"/>
            <column name="email" value="test@test.ru"/>
            <column name="password" value="test"/>
        </insert>
    </changeSet>
</databaseChangeLog>